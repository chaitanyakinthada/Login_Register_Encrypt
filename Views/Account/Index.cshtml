@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}


<h2 class="text-center">Login</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
           <div class="jumbotron"> 
               <form role="form" asp-action="Login" asp-controller="Account" method="post">
                   <div class="form-group">
                       <label for="Email">Email</label>
                       <input type="email" name="Email" asp-for="Email" class="form-control input-sm" placeholder="Email Address">
                       <span asp-validation-for="Email" class="text-danger"></span>
                   </div>
                   <div class="form-group">
                       <label for="Password">Password</label>
                       <input type="password" name="Password" asp-for="Password" class="form-control input-sm" placeholder="Password">
                       <span asp-validation-for="Password" class="text-danger"></span>
                   </div>
                   <input type="submit" value="Login" class="btn btn-info btn-block">
                   <a formmethod="get" class="btn btn-info btn-block" asp-controller="Account" asp-action="Registration">Register</a>
               </form>
        </div>
    </div>

</div>
